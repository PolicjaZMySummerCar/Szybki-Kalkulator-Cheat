using namespace std;
char karta,wybor_menu,menu;

int mnozenie1,mnozenie2,wynik_mnozenie,dzielnik1,dzielnik2,wynik_dzielenia,dodawanie1,dodawanie2,wynik_dodawania,odejmowanie1,odejmowanie2,wynik_odejmowania;
int main()
{
   while (true)
{
